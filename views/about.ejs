<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>About Us - Tech Blog</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
  :root {
    --primary: #3b82f6;
    --primary-hover: #2563eb;
    --primary-light: #dbeafe;
    --accent: #8b5cf6;
    --accent-hover: #7c3aed;
    --background: #0f0f23;
    --surface: #1a1a3a;
    --surface-light: #252545;
    --text-primary: #ffffff;
    --text-secondary: #a8a8b3;
    --text-muted: #6c6c89;
    --border: #2a2a4a;
    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --gradient-surface: linear-gradient(135deg, #1a1a3a 0%, #252545 100%);
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8px 25px rgba(0, 0, 0, 0.5);
    --shadow-glow: 0 0 20px rgba(59, 130, 246, 0.3);
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--background);
    color: var(--text-primary);
    line-height: 1.7;
    font-size: 16px;
    overflow-x: hidden;
  }

  /* Animated background */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
    z-index: -1;
    animation: backgroundPulse 8s ease-in-out infinite alternate;
  }

  @keyframes backgroundPulse {
    0% { opacity: 0.5; }
    100% { opacity: 0.8; }
  }

  header {
    background: rgba(26, 26, 58, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border);
    padding: 1.25rem 2rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-md);
  }

  .logo-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    font-weight: 800;
    font-size: 1.5rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo h2 {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo div {
    width: 32px !important;
    height: 32px !important;
    background: var(--gradient-primary);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-glow);
    animation: logoGlow 3s ease-in-out infinite alternate;
  }

  @keyframes logoGlow {
    0% { box-shadow: 0 0 10px rgba(59, 130, 246, 0.3); }
    100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.6); }
  }

  nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  nav a {
    text-decoration: none;
    font-size: 0.95rem;
    color: var(--text-secondary);
    font-weight: 500;
    padding: 0.75rem 1.25rem;
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  nav a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s;
  }

  nav a:hover::before {
    left: 100%;
  }

  nav a:hover {
    background: var(--gradient-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  nav a[href="/about"] {
    background: var(--gradient-primary);
    color: white;
    font-weight: 600;
    box-shadow: var(--shadow-md);
  }

  .layout-root {
    padding: 4rem 2rem;
    background: var(--gradient-surface);
    min-height: calc(100vh - 80px);
    position: relative;
    overflow: hidden;
  }

  .layout-root::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.08) 0%, transparent 70%);
    animation: pageFloat 8s ease-in-out infinite alternate;
  }

  @keyframes pageFloat {
    0% { transform: translate(0, 0) rotate(0deg); }
    100% { transform: translate(-30px, -30px) rotate(3deg); }
  }

  .content-area {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    animation: headerSlide 1s ease-out;
  }

  @keyframes headerSlide {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .about-title {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 900;
    color: var(--text-primary);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #ffffff 0%, #a8a8b3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  .about-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: 2px;
  }

  .about-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    font-weight: 400;
    margin-top: 1.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .about-content {
    animation: contentSlide 0.8s ease-out 0.3s both;
  }

  @keyframes contentSlide {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .about-text {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.8;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .team-section {
    margin-top: 4rem;
    animation: teamSlide 0.8s ease-out 0.6s both;
  }

  @keyframes teamSlide {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .team-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 2rem;
    color: var(--text-primary);
    text-align: center;
    background: linear-gradient(135deg, #ffffff 0%, #a8a8b3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  .team-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: var(--gradient-accent);
    border-radius: 2px;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .team-member {
    background: var(--surface);
    border-radius: 20px;
    padding: 2.5rem;
    border: 1px solid var(--border);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow-lg);
    animation: memberSlide 0.6s ease-out both;
  }

  .team-member:nth-child(1) { animation-delay: 0.2s; }
  .team-member:nth-child(2) { animation-delay: 0.4s; }
  .team-member:nth-child(3) { animation-delay: 0.6s; }

  @keyframes memberSlide {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .team-member::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .team-member:hover::before {
    transform: scaleX(1);
  }

  .team-member:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
    border-color: var(--accent);
  }

  .team-member::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .team-member:hover::after {
    opacity: 1;
  }

  .member-avatar {
    width: 64px;
    height: 64px;
    background: var(--gradient-primary);
    color: white;
    font-weight: 800;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin-bottom: 1.5rem;
    user-select: none;
    box-shadow: var(--shadow-glow);
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
  }

  .team-member:hover .member-avatar {
    transform: scale(1.1);
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.6);
  }

  .member-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .team-member:hover .member-name {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .member-role {
    font-weight: 600;
    color: var(--accent);
    margin: 0 0 1rem 0;
    font-size: 1rem;
    position: relative;
    z-index: 1;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .member-bio {
    margin: 0;
    color: var(--text-secondary);
    font-weight: 400;
    line-height: 1.7;
    position: relative;
    z-index: 1;
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--surface);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--primary-hover);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    header {
      padding: 1rem;
    }
    
    .logo-container {
      flex-direction: column;
      gap: 1rem;
    }

    nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    nav a {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }

    .layout-root {
      padding: 2rem 1rem;
    }

    .about-title {
      font-size: 2rem;
    }

    .team-title {
      font-size: 1.8rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .team-member {
      padding: 1.5rem;
    }

    .member-name {
      font-size: 1.25rem;
    }

    .member-avatar {
      width: 56px;
      height: 56px;
      font-size: 1.25rem;
    }

    .page-header {
      margin-bottom: 2rem;
    }

    .about-text {
      font-size: 1rem;
    }
  }

  /* Smooth transitions for all interactive elements */
  * {
    transition: color 0.3s ease, background-color 0.3s ease, border-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }

  /* Enhanced focus states for accessibility */
  .team-member:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }

  nav a:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }
  </style>
</head>
<body>
  <header>
    <div class="logo-container">
      <div class="logo">
        <div style="width: 16px; height: 16px;">
          <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M39.5563 34.1455V13.8546..." fill="currentColor"></path>
            <path d="M10.4485 13.8519C10.4749 13.9271..." fill="currentColor"></path>
          </svg>
        </div>
        <h2 style="font-size: 18px; font-weight: bold; margin: 0;">Tech Blog</h2>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Articles</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </div>
  </header>

  <div class="layout-root">
    <div class="content-area">
      <div class="page-header">
        <h1 class="about-title">About Our Blog</h1>
        <p class="about-subtitle">Passionate technologists sharing knowledge and insights with the world</p>
      </div>

      <div class="about-content">
        <p class="about-text">
          Welcome to Tech Blog, your premier destination for cutting-edge technology insights, 
          in-depth tutorials, and the latest news about the digital world. Founded in 2023, 
          we're committed to delivering high-quality content that empowers our readers to 
          navigate the rapidly evolving tech landscape.
        </p>
        <p class="about-text">
          Our team of passionate writers, developers, and tech enthusiasts brings together 
          decades of industry experience to provide you with accurate, engaging, and 
          actionable content. Whether you're a seasoned professional or just starting your 
          tech journey, you'll find valuable resources here.
        </p>
      </div>

      <div class="team-section">
        <h2 class="team-title">Meet Our Team</h2>
        <div class="team-grid">
          <div class="team-member" tabindex="0">
            <div class="member-avatar">JD</div>
            <h3 class="member-name">John Doe</h3>
            <p class="member-role">Founder & Editor-in-Chief</p>
            <p class="member-bio">
              10+ years in tech journalism. Former lead developer at TechCorp. 
              Passionate about making complex topics accessible to everyone.
            </p>
          </div>
          <div class="team-member" tabindex="0">
            <div class="member-avatar">AS</div>
            <h3 class="member-name">Alice Smith</h3>
            <p class="member-role">Senior Writer</p>
            <p class="member-bio">
              Specializes in AI and machine learning. Holds a PhD in Computer Science 
              from Stanford University. Published researcher and conference speaker.
            </p>
          </div>
          <div class="team-member" tabindex="0">
            <div class="member-avatar">RJ</div>
            <h3 class="member-name">Robert Johnson</h3>
            <p class="member-role">Web Technologies Expert</p>
            <p class="member-bio">
              Full-stack developer with expertise in modern JavaScript frameworks. 
              Creator of several popular open-source projects with thousands of stars.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add keyboard navigation for team members
      const teamMembers = document.querySelectorAll('.team-member');
      teamMembers.forEach(member => {
        member.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            // You could add functionality here, like opening a modal with more info
            member.style.transform = 'scale(0.98)';
            setTimeout(() => {
              member.style.transform = '';
            }, 150);
          }
        });
      });

      // Add smooth scroll behavior
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Add intersection observer for animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);

      // Observe team members for staggered animations
      teamMembers.forEach((member, index) => {
        member.style.opacity = '0';
        member.style.transform = 'translateY(30px)';
        member.style.transition = `opacity 0.6s ease ${index * 0.2}s, transform 0.6s ease ${index * 0.2}s`;
        observer.observe(member);
      });
    });
  </script>
</body>
