<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Contact Us - Tech Blog</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
  :root {
    --primary: #3b82f6;
    --primary-hover: #2563eb;
    --primary-light: #dbeafe;
    --accent: #8b5cf6;
    --accent-hover: #7c3aed;
    --background: #0f0f23;
    --surface: #1a1a3a;
    --surface-light: #252545;
    --text-primary: #ffffff;
    --text-secondary: #a8a8b3;
    --text-muted: #6c6c89;
    --border: #2a2a4a;
    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --gradient-surface: linear-gradient(135deg, #1a1a3a 0%, #252545 100%);
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8px 25px rgba(0, 0, 0, 0.5);
    --shadow-glow: 0 0 20px rgba(59, 130, 246, 0.3);
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--background);
    color: var(--text-primary);
    line-height: 1.7;
    font-size: 16px;
    overflow-x: hidden;
  }

  /* Animated background */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
    z-index: -1;
    animation: backgroundPulse 8s ease-in-out infinite alternate;
  }

  @keyframes backgroundPulse {
    0% { opacity: 0.5; }
    100% { opacity: 0.8; }
  }

  header {
    background: rgba(26, 26, 58, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border);
    padding: 1.25rem 2rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-md);
  }

  .logo-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    font-weight: 800;
    font-size: 1.5rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo h2 {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo div {
    width: 32px !important;
    height: 32px !important;
    background: var(--gradient-primary);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-glow);
    animation: logoGlow 3s ease-in-out infinite alternate;
  }

  @keyframes logoGlow {
    0% { box-shadow: 0 0 10px rgba(59, 130, 246, 0.3); }
    100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.6); }
  }

  nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  nav a {
    text-decoration: none;
    font-size: 0.95rem;
    color: var(--text-secondary);
    font-weight: 500;
    padding: 0.75rem 1.25rem;
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  nav a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s;
  }

  nav a:hover::before {
    left: 100%;
  }

  nav a:hover {
    background: var(--gradient-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  nav a[href="/contact"] {
    background: var(--gradient-primary);
    color: white;
    font-weight: 600;
    box-shadow: var(--shadow-md);
  }

  .layout-root {
    padding: 4rem 2rem;
    background: var(--gradient-surface);
    min-height: calc(100vh - 80px);
    position: relative;
    overflow: hidden;
  }

  .layout-root::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.08) 0%, transparent 70%);
    animation: pageFloat 8s ease-in-out infinite alternate;
  }

  @keyframes pageFloat {
    0% { transform: translate(0, 0) rotate(0deg); }
    100% { transform: translate(-30px, -30px) rotate(3deg); }
  }

  .content-area {
    max-width: 800px;
    margin: 0 auto;
    background: var(--surface);
    padding: 3rem;
    border-radius: 24px;
    border: 1px solid var(--border);
    box-shadow: var(--shadow-lg);
    position: relative;
    z-index: 1;
    overflow: hidden;
    animation: contentSlide 1s ease-out;
  }

  @keyframes contentSlide {
    from { opacity: 0; transform: translateY(50px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .content-area::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
  }

  .content-area::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.03) 0%, rgba(139, 92, 246, 0.03) 100%);
    pointer-events: none;
  }

  .contact-title {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 900;
    color: var(--text-primary);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #ffffff 0%, #a8a8b3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .contact-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: 2px;
  }

  .intro-text {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    color: var(--text-secondary);
    text-align: center;
    position: relative;
    z-index: 1;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    position: relative;
    z-index: 1;
    animation: gridSlide 0.8s ease-out 0.3s both;
  }

  @keyframes gridSlide {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .social-card {
    background: var(--surface-light);
    padding: 1.75rem 2rem;
    border-radius: 16px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    color: var(--text-primary);
    font-weight: 600;
    font-size: 1.1rem;
    border: 1px solid var(--border);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  .social-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .social-card:hover::before {
    transform: scaleX(1);
  }

  .social-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .social-card:hover::after {
    opacity: 1;
  }

  .social-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
    border-color: var(--accent);
    color: var(--text-primary);
  }

  .social-card .icon {
    font-size: 2rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    border-radius: 12px;
    box-shadow: var(--shadow-glow);
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .social-card:hover .icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.6);
  }

  .social-card .text {
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
  }

  .social-card:hover .text {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Individual social card colors */
  .social-card:nth-child(1) .icon { background: linear-gradient(135deg, #ea4335 0%, #fbbc04 100%); }
  .social-card:nth-child(2) .icon { background: linear-gradient(135deg, #1da1f2 0%, #0d8bd9 100%); }
  .social-card:nth-child(3) .icon { background: linear-gradient(135deg, #0077b5 0%, #00a0dc 100%); }
  .social-card:nth-child(4) .icon { background: linear-gradient(135deg, #333 0%, #666 100%); }
  .social-card:nth-child(5) .icon { background: linear-gradient(135deg, #1877f2 0%, #42a5f5 100%); }
  .social-card:nth-child(6) .icon { background: linear-gradient(135deg, #e4405f 0%, #fd1d1d 100%); }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--surface);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--primary-hover);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    header {
      padding: 1rem;
    }
    
    .logo-container {
      flex-direction: column;
      gap: 1rem;
    }

    nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    nav a {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }

    .layout-root {
      padding: 2rem 1rem;
    }

    .content-area {
      padding: 2rem 1.5rem;
    }

    .contact-title {
      font-size: 2rem;
    }

    .intro-text {
      font-size: 1rem;
    }

    .social-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .social-card {
      padding: 1.25rem 1.5rem;
      font-size: 1rem;
    }

    .social-card .icon {
      width: 40px;
      height: 40px;
      font-size: 1.5rem;
    }
  }

  /* Smooth transitions for all interactive elements */
  * {
    transition: color 0.3s ease, background-color 0.3s ease, border-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }

  /* Enhanced focus states for accessibility */
  .social-card:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }

  nav a:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }

  /* Staggered animations for social cards */
  .social-card:nth-child(1) { animation-delay: 0.1s; }
  .social-card:nth-child(2) { animation-delay: 0.2s; }
  .social-card:nth-child(3) { animation-delay: 0.3s; }
  .social-card:nth-child(4) { animation-delay: 0.4s; }
  .social-card:nth-child(5) { animation-delay: 0.5s; }
  .social-card:nth-child(6) { animation-delay: 0.6s; }
  </style>
</head>
<body>
  <header>
    <div class="logo-container">
      <div class="logo">
        <div style="width: 16px; height: 16px;">
          <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M39.5563 34.1455V13.8546..." fill="currentColor"></path>
            <path d="M10.4485 13.8519C10.4749 13.9271..." fill="currentColor"></path>
          </svg>
        </div>
        <h2 style="font-size: 18px; font-weight: bold; margin: 0;">Tech Blog</h2>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Articles</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </div>
  </header>

  <main class="layout-root">
    <div class="content-area">
      <h1 class="contact-title">Let's Connect!</h1>
      <p class="intro-text">Find us on your favorite platforms. We're always excited to hear from our readers and engage with our amazing community!</p>
      <div class="social-grid">
        <a href="mailto:contact@techblog.com" class="social-card" tabindex="0">
          <div class="icon">📧</div>
          <div class="text">contact@techblog.com</div>
        </a>
        <a href="https://twitter.com/yourhandle" target="_blank" class="social-card" tabindex="0">
          <div class="icon">🐦</div>
          <div class="text">Twitter: @yourhandle</div>
        </a>
        <a href="https://linkedin.com/in/yourprofile" target="_blank" class="social-card" tabindex="0">
          <div class="icon">🔗</div>
          <div class="text">LinkedIn: yourprofile</div>
        </a>
        <a href="https://github.com/yourgithub" target="_blank" class="social-card" tabindex="0">
          <div class="icon">💻</div>
          <div class="text">GitHub: yourgithub</div>
        </a>
        <a href="https://facebook.com/yourpage" target="_blank" class="social-card" tabindex="0">
          <div class="icon">📘</div>
          <div class="text">Facebook: Tech Blog</div>
        </a>
        <a href="https://instagram.com/yourhandle" target="_blank" class="social-card" tabindex="0">
          <div class="icon">📸</div>
          <div class="text">Instagram: @yourhandle</div>
        </a>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add staggered animation to social cards
      const socialCards = document.querySelectorAll('.social-card');
      socialCards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.animation = `cardSlide 0.6s ease-out ${index * 0.1 + 0.5}s both`;
      });

      // Add keyboard navigation
      socialCards.forEach(card => {
        card.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            card.click();
          }
        });

        // Add click animation
        card.addEventListener('mousedown', function() {
          card.style.transform = 'translateY(-6px) scale(0.98)';
        });

        card.addEventListener('mouseup', function() {
          card.style.transform = '';
        });
      });

      // Add smooth scroll behavior
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Add intersection observer for enhanced animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);

      // Observe elements for scroll animations
      const animatedElements = document.querySelectorAll('.social-card, .intro-text');
      animatedElements.forEach(el => {
        observer.observe(el);
      });
    });

    // Add CSS animation keyframes dynamically
    const style = document.createElement('style');
    style.textContent = `
      @keyframes cardSlide {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>