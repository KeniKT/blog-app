<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Blog</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
  body {
    font-family: 'Inter', sans-serif;
    margin: 0;
    padding: 0;
    background: #f9f9f9;
    min-height: 100vh;
  }

  .layout-root {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .blog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .header-brand {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .logo-icon svg {
    width: 30px;
    height: 30px;
    color: #333;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    font-size: 14px;
    font-weight: 500;
    border-radius: 6px;
    text-decoration: none;
    cursor: pointer;
    border: none;
    background: transparent;
    color: inherit;
  }

  .btn-primary,
  .btn-danger {
    background: transparent;
    color: inherit;
    padding: 4px;
    border: none;
  }

  .btn-outline {
    background-color: transparent;
    border: 1px solid #ccc;
    color: #333;
  }

  .posts-title {
    font-size: 1.25rem;
    margin-bottom: 20px;
  }

  .post-card {
    background: white;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }

  .post-title {
    margin: 0 0 10px;
    font-size: 18px;
    font-weight: 600;
  }

  .post-preview {
    margin: 0;
    color: #555;
  }

  .post-actions,
  .post-comments {
    margin-top: 15px;
  }

  .comment-heading {
    font-size: 16px;
    margin-top: 15px;
    margin-bottom: 10px;
  }

  .x-comment {
    display: flex;
    gap: 12px;
    padding: 12px 0;
    border-bottom: 1px solid #eee;
  }

  .x-comment-avatar {
    flex-shrink: 0;
  }

  .x-avatar-circle {
    width: 40px;
    height: 40px;
    background-color: #1da1f2;
    color: white;
    font-weight: 600;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .x-comment-content {
    flex: 1;
  }

  .x-comment-header {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    margin-bottom: 4px;
  }

  .x-username {
    font-weight: 600;
  }

  .x-timestamp {
    color: #999;
    font-size: 12px;
  }

  .x-comment-text {
    margin: 0 0 8px;
    font-size: 15px;
    line-height: 1.4;
  }

  .x-form {
    display: flex;
    gap: 8px;
    margin-bottom: 10px;
  }

  .x-input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
  }

  .x-btn-primary,
  .x-btn-outline,
  .x-btn-danger {
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    background: transparent;
    color: inherit;
  }

  .mt-4 {
    margin-top: 1rem;
  }

  .post-actions-bar {
    display: flex;
    gap: 12px;
    margin-top: 10px;
  }

  .inline-form {
    display: inline;
  }

  .action-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 6px;
    border-radius: 6px;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .action-btn:hover {
    background: #eaeaea;
  }

  .icon {
    width: 18px;
    height: 18px;
    stroke-width: 2;
    color: #555;
  }

  .btn-icon {
    width: 16px;
    height: 16px;
  }
</style>


</head>
<body>
  <div class="layout-root">
    <header class="blog-header">
      <div class="header-brand">
        <div class="logo-icon">
          <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 4H17.3334V17.3334H30.6666V30.6666H44V44H4V4Z" fill="currentColor" />
          </svg>
        </div>
        <h2 class="blog-title">My Blog</h2>
      </div>
      <div class="header-actions">
        <a href="/new" class="btn btn-primary">
          <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 256 256">
            <path d="M228,128a12,12,0,0,1-12,12H140v76a12,12,0,0,1-24,0V140H40a12,12,0,0,1,0-24h76V40a12,12,0,0,1,24,0v76h76A12,12,0,0,1,228,128Z" />
          </svg>
          New Post
        </a>
      </div>
    </header>

    <div class="blog-container">
      <h2 class="posts-title">All Posts</h2>

      <% posts.forEach(post => { %>
        <div class="post-card">
          <div class="post-content">
            <h3 class="post-title"><%= post.title %></h3>
            <p class="post-preview">
              <%= post.content.substring(0, 100) + (post.content.length > 100 ? '...' : '') %>
            </p>
          </div>

       <!-- Comments Section -->
<div class="post-comments">
  <h4 class="comment-heading">Comments</h4>

  <% (commentsByPost[post.id] || []).forEach(comment => { %>
    <div class="comment-block">
      <p class="comment-text"><%= comment.content %></p>

      <!-- Edit Comment Form -->
      <form method="POST" action="/comment/edit/<%= comment.id %>" class="flex items-center gap-2 mt-2">
        <input type="text" name="content" value="<%= comment.content %>" class="form-control text-sm" required />
        <button type="submit" class="btn btn-outline text-sm" title="Update Comment">
          <!-- Checkmark Icon -->
          <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 6L9 17l-5-5"/>
          </svg>
        </button>
      </form>

      <!-- Delete Comment Form -->
      <form method="POST" action="/comment/delete/<%= comment.id %>" class="flex items-center gap-2 mt-2">
        <button type="submit" class="btn btn-danger text-sm" title="Delete Comment">
          <!-- Trash Icon -->
          <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
          </svg>
        </button>
      </form>
    </div>
  <% }) %>

  <!-- Add Comment Form -->
  <form method="POST" action="/comments/<%= post.id %>" class="mt-4 flex gap-2">
    <input
      type="text"
      name="content"
      placeholder="Add a comment..."
      class="form-control"
      required
    />
    <button type="submit" class="btn btn-primary" title="Add Comment">
      <!-- Plus Icon -->
      <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 256 256">
        <path d="M228,128a12,12,0,0,1-12,12H140v76a12,12,0,0,1-24,0V140H40a12,12,0,0,1,0-24h76V40a12,12,0,0,1,24,0v76h76A12,12,0,0,1,228,128Z"/>
      </svg>
    </button>
  </form>
</div>


          <div class="post-actions-bar">
  <a href="/edit/<%= post.id %>" class="action-btn" title="Edit">
    <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path d="M17 3a2.828 2.828 0 0 1 4 4L7 21H3v-4L17 3z" />
    </svg>
  </a>

  <form method="POST" action="/delete/<%= post.id %>" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this post?');">
    <button type="submit" class="action-btn" title="Delete">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
      </svg>
    </button>
  </form>
</div>

        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
