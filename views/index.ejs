<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Articles - Tech Blog</title>
  <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;500;700;800&family=Noto+Sans:wght@400;500;700;900&display=swap" rel="stylesheet">
  <style>
    /* Consistent with other pages */
    body {
      margin: 0;
      font-family: 'Newsreader', 'Noto Sans', sans-serif;
      background-color: #f8fafc;
      color: #0d141c;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #e7edf4;
      padding: 12px 40px;
      background-color: #fff;
    }

    .logo-container {
      display: flex;
      align-items: center;
      gap: 32px;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    nav a {
      text-decoration: none;
      color: #0d141c;
      font-weight: 500;
      font-size: 14px;
      margin-right: 36px;
    }

    nav a:last-child {
      margin-right: 0;
    }

    .search-avatar {
      display: flex;
      align-items: center;
      gap: 32px;
    }

    .search-box {
      min-width: 160px;
      height: 40px;
      display: flex;
      border-radius: 8px;
      overflow: hidden;
      background-color: #e7edf4;
    }

    .search-box input {
      border: none;
      outline: none;
      background-color: #e7edf4;
      padding: 0 16px;
      flex: 1;
      font-size: 16px;
      color: #0d141c;
    }

    .search-box .icon {
      padding-left: 16px;
      display: flex;
      align-items: center;
      color: #49739c;
    }

    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 9999px;
      background-size: cover;
      background-position: center;
    }

    /* Main content styling */
    .layout-root {
      max-width: 920px;
      margin: 40px auto;
      padding: 0 20px;
    }

    .posts-title {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 32px;
      color: #0d141c;
    }

    .post-card {
      background-color: #ffffff;
      border: 1px solid #e7edf4;
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 24px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);
      transition: transform 0.2s ease;
    }

    .post-card:hover {
      transform: translateY(-2px);
    }

    .post-title {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 12px;
      color: #0d141c;
    }

    .post-preview {
      font-size: 16px;
      line-height: 1.6;
      color: #3a3a3a;
      margin-bottom: 16px;
    }

    .post-actions-bar {
      display: flex;
      gap: 16px;
      margin-top: 20px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      font-size: 14px;
      font-weight: 600;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .btn-primary {
      background-color: #3d98f4;
      color: white;
      border: none;
    }

    .btn-primary:hover {
      background-color: #2b7dc7;
    }

    .btn-danger {
      background-color: #fee2e2;
      color: #dc2626;
      border: none;
    }

    .btn-danger:hover {
      background-color: #fecaca;
    }

    .comment-section {
      margin-top: 24px;
      padding-top: 24px;
      border-top: 1px solid #e7edf4;
    }

    .comment-heading {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 16px;
    }

    .comment-block {
      padding: 12px 0;
      border-bottom: 1px solid #e7edf4;
    }

    .comment-text {
      font-size: 14px;
      line-height: 1.6;
      color: #3a3a3a;
    }

    .form-control {
      width: 100%;
      padding: 10px 14px;
      border: 1px solid #e7edf4;
      border-radius: 8px;
      font-size: 14px;
      transition: border-color 0.2s ease;
    }

    .form-control:focus {
      outline: none;
      border-color: #3d98f4;
      box-shadow: 0 0 0 2px rgba(61, 152, 244, 0.1);
    }

    .flex {
      display: flex;
    }

    .gap-2 {
      gap: 8px;
    }

    .mt-4 {
      margin-top: 16px;
    }

    @media (max-width: 768px) {
      header {
        flex-direction: column;
        gap: 16px;
        padding: 12px 20px;
      }

      .logo-container {
        width: 100%;
        justify-content: space-between;
      }

      nav {
        width: 100%;
        display: flex;
        justify-content: space-between;
      }

      .search-avatar {
        width: 100%;
        justify-content: space-between;
      }

      .layout-root {
        padding: 0 12px;
      }

      .post-card {
        padding: 16px;
      }

      .post-title {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="logo-container">
      <div class="logo">
        <div style="width: 16px; height: 16px;">
          <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M39.5563 34.1455V13.8546..." fill="currentColor"></path>
            <path d="M10.4485 13.8519C10.4749 13.9271..." fill="currentColor"></path>
          </svg>
        </div>
        <h2 style="font-size: 18px; font-weight: bold; margin: 0;">Tech Blog</h2>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Articles</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </div>
    <div class="search-avatar">
      <div class="search-box">
        <div class="icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#49739c" viewBox="0 0 256 256">
            <path d="M229.66,218.34l-50.07-50.06a88.11,88.11..." />
          </svg>
        </div>
        <input type="text" placeholder="Search" />
      </div>
      <div class="avatar" style="background-image: url('https://lh3.googleusercontent.com/aida-public/...');"></div>
    </div>
  </header>

  <div class="layout-root">
    <h2 class="posts-title">All Articles</h2>

    <% posts.forEach(post => { %>
      <div class="post-card">
        <div class="post-content">
          <h3 class="post-title"><%= post.title %></h3>
          <p class="post-preview">
            <%= post.content.substring(0, 100) + (post.content.length > 100 ? '...' : '') %>
          </p>
        </div>

        <div class="comment-section">
          <h4 class="comment-heading">Comments</h4>

          <% (commentsByPost[post.id] || []).forEach(comment => { %>
            <div class="comment-block">
              <p class="comment-text"><%= comment.content %></p>
              <div class="flex gap-2 mt-4">
                <form method="POST" action="/comment/edit/<%= comment.id %>" class="flex gap-2">
                  <input type="text" name="content" value="<%= comment.content %>" class="form-control" required>
                  <button type="submit" class="btn btn-primary">Update</button>
                </form>
                <form method="POST" action="/comment/delete/<%= comment.id %>">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          <% }) %>

          <form method="POST" action="/comments/<%= post.id %>" class="mt-4 flex gap-2">
            <input type="text" name="content" placeholder="Add a comment..." class="form-control" required>
            <button type="submit" class="btn btn-primary">Comment</button>
          </form>
        </div>

        <div class="post-actions-bar">
          <a href="/edit/<%= post.id %>" class="btn btn-primary">Edit</a>
          <form method="POST" action="/delete/<%= post.id %>">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>